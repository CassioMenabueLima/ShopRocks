<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:id="@+id/linear_main">

    <TextView
            android:layout_width="wrap_content"
            android:text="Categories"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp"
            android:layout_height="wrap_content" android:textSize="20sp" android:id="@+id/categories_txt"/>
    <ListView
            android:layout_width="395dp"
            android:layout_height="655dp"
            android:id="@+id/category_listview"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
    />

</LinearLayout>